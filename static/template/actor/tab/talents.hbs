<div class="talents">
  <div class="wrapper talents-abilities">
    <h1>{{localize "TITLE.TALENTS_ABILITIES"}}</h1>
    <div class="item-list">
      <div class="header">
        <div class="item-property item-image"></div>
        <span class="item-property item-name">{{localize "HEADER.TALENT"}}</span>
        <span class="item-property flex large">{{localize "HEADER.DESCRIPTION"}}</span>
        <div class="item-controls">
          <a class="item-create" title="Create Item" data-type="talent"><i class="fas fa-plus"></i></a>
        </div>
      </div>
      {{#each items.talents as |item|}}
      <div class="item" data-item-id="{{item.id}}">
        <div class="item-content item-dropdown-right">
          <img class="item-property item-image" src="{{item.img}}"></img>
          <div class="item-property item-edit item-name">{{item.name}}</div>
          <div class="item-property flex large item-dropdown long-text">{{{lookup ../enrichment item.id}}}</div>
          <div class="item-controls">
            <a class="item-control item-edit" title="Edit Item"><i class="fas fa-edit"></i></a>
            <a class="item-control item-post" title="Post Item"><i class="fas fa-comment"></i></a>
            <a class="item-control item-delete" title="Delete Item"><i class="fas fa-times"></i></a>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
