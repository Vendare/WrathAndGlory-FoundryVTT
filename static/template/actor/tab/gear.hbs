<div class="gear">
  {{#if (eq actor.type "agent")}}
  <div class="wrapper influence-wealth">
    <div class="wrapper-item influence">
      <label class="roll-influence hover">{{localize "RESOURCE.INFLUENCE"}}</label>
      <input name="system.resources.influence" type="number" value="{{system.resources.influence}}" data-dtype="Number" />
    </div>
    <div class="wrapper-item wealth">
      <label>{{localize "RESOURCE.WEALTH"}}</label>
      <input name="system.resources.wealth" type="number" value="{{system.resources.wealth}}" data-dtype="Number" />
    </div>
  </div>
  {{/if}}
  <div class="wrapper gear-list">
    <h1>{{localize "TITLE.WARGEAR"}}</h1>
    <div class="pointer-enable wrapper">

      {{#each inventory as |section s|}}
      <div class="item-list">
        <div class="header">
          <div class="item-property item-image"></div>
          <span class="item-property item-name">{{localize section.header}}</span>
          {{#if section.equippable}}
          <span class="item-property small">{{localize "ITEM.EQP"}}</span>
          {{/if}}
          {{#if section.quantity}}
          <span class="item-property">{{localize "ITEM.QTY"}}</span>
          {{/if}}
          <div class="item-controls">
            <a class="item-create" title="Create Item" data-type="{{section.type}}"><i class="fas fa-plus"></i></a>
          </div>
        </div>
        {{#each section.items as |item|}}
        <div class="item" data-item-id="{{item.id}}">
          <div class="item-content">
              <img class="item-property item-image" src="{{item.img}}"></img>
              <div class="item-property item-name item-edit item-dropdown-right">{{item.name}}</div>
            {{#if ../equippable}}
            <div class="item-property small">
              {{#if item.equipped}}
              <a class="checkbox" data-target="item" data-item-target="system.equipped"><i class="far fa-check-circle"></i></a>
              {{else}}
              <a class="checkbox" data-target="item" data-item-target="system.equipped"><i class="far fa-circle"></i></a>
              {{/if}}
            </div>
            {{/if}}

            
            {{#if ../quantity}}
            <div class="item-property qty-click">
              <button type="button" class="qty-click" data-type="decrement">-</button>
              {{item.quantity}}
              <button type="button" class="qty-click" data-type="increment">+</button>
            </div>
            {{/if}}
            <div class="item-controls">
              <a class="item-control item-edit" title="Edit Item"><i class="fas fa-edit"></i></a>
              <a class="item-control item-post" title="Post Item"><i class="fas fa-comment"></i></a>
              <a class="item-control item-delete" title="Delete Item"><i class="fas fa-times"></i></a>
            </div>
          </div>
        </div>
        {{/each}}
      </div>
      {{/each}}
  </div>
</div>
  </div>